@model MediaWeb.Models.Muziek.MuziekDetailViewModel
@if (!User.IsInRole("Admin") && Model.Zichtbaar == false)
{
    <strong>Dit nummer is momenteel niet beschikbaar!</strong>
}
else
{
    @if (User.IsInRole("Admin"))
    {
        <strong>Zichtbaar: @Model.Zichtbaar</strong>
        <br />
        <br />
    }
    <strong>Titel</strong>
    <p>@Model.Titel</p>
    <strong>Lengte (in sec)</strong>
    <p>@Model.Lengte</p>
    <strong>Album</strong>
    <br />
    <a asp-controller="Muziek" asp-action="AlbumDetail" asp-route-id="@Model.AlbumId">@Model.Album</a>
    <br />
    <br /><strong>Artiest</strong>
    <br />
    <a asp-controller="Muziek" asp-action="ArtiestDetail" asp-route-id="@Model.ArtiestId">@Model.Artiest</a>
    <br />
    <br />
    <a asp-action="Index" asp-controller="Muziek">Terug naar muziek</a><a asp-action="Edit" asp-controller="Muziek" asp-route-id="@Model.Id" asp-route-type="2">  |  Nummer aanpassen</a>
    <a asp-action="Delete" asp-controller="Muziek" asp-route-id="@Model.Id" asp-route-type="2" onclick="return confirm('Are you sure you want to delete this?')">  |  Nummer verwijderen</a>

}