@model MediaWeb.Models.Muziek.ArtiestDetailViewModel
<strong>Naam</strong>
<p>@Model.Naam</p>
<strong>Albums</strong>
@if (Model.Albums.Count > 0)
{
    @for (int i = 0; i < Model.Albums.Count; i++)
    {
        <br/><span> @Model.Albums[i] </span> <a style="margin-left:69px" asp-action="AlbumDetail" asp-controller="Muziek" asp-route-id="@Model.AlbumIds[i]"> Bekijk album</a>
    }

}
else
{
    <p>Nog geen albums beschikbaar</p>
}
<br /><br /><br />
<a asp-action="CreateAlbum" asp-controller="Muziek" asp-route-inputStr="@Model.Naam"> Album Toevoegen</a>
<a asp-action="Edit" asp-controller="Muziek" asp-route-id="@Model.Id" asp-route-type="0">  |  Artiest aanpassen</a>
<a asp-action="Delete" asp-controller="Muziek" asp-route-id="@Model.Id" asp-route-type="0" onclick="return confirm('Are you sure you want to delete this?')">  |  Artiest verwijderen</a>
