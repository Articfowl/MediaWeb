@model MediaWeb.Models.Muziek.AlbumDetailViewModel
<strong>@Model.Titel</strong>
<br />
<img src="@Model.GetPicture" />
<br />

<strong><a asp-controller="Muziek" asp-action="ArtiestDetail" asp-route-id="@Model.ArtiestId">@Model.Artiest</a></strong>
<br />
@if (Model.Nummers.Count > 0)
{
    <strong>Nummers</strong>
    @for (int i = 0; i < Model.Nummers.Count; i++)
    {
        <p>
            @i . @Model.Nummers[i] <a asp-action="NummerDetail" asp-controller="Muziek" asp-route-id="@Model.NummersId[i]"> detail</a>

        </p>
    }
}
<br />
<a asp-action="Create" asp-controller="Muziek" asp-route-inputStr="@Model.Artiest" asp-route-album="@Model.Titel">Nummer toevoegen</a>
<a asp-action="Edit" asp-controller="Muziek" asp-route-id="@Model.Id" asp-route-type="1">  |  Album aanpassen</a>
<a asp-action="Delete" asp-controller="Muziek" asp-route-id="@Model.Id" asp-route-type="1" onclick="return confirm('Are you sure you want to delete this?')">  |  Album verwijderen</a>
