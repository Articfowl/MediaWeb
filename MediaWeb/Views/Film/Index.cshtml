@model IEnumerable<MediaWeb.Models.Film.FilmListViewModel>

    <table>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <strong>@item.Titel</strong>
                <img style="float:right" src="@item.GetPicture()" />
                @foreach (var genre in item.Genres)
                {
                    <small>@genre</small>
                }
            </td>
            <td>
                <a asp-controller="Film" asp-action="Detail" asp-route-id=@item.Id> Details</a><span> | </span>
                <a asp-controller="Film" asp-action="Edit" asp-route-id=@item.Id> Edit</a><span> | </span>
                <a asp-controller="Film" asp-action="Delete" asp-route-id=@item.Id>Delete</a>
            </td>
        </tr>
        }
    </table>
